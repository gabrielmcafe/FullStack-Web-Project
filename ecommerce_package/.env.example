# Configurações do E-commerce
# Copie este arquivo para .env e ajuste os valores

# Chave secreta do Flask (gere uma nova para produção)
SECRET_KEY=sua_chave_super_secreta_aqui_mude_em_producao

# Configuração do banco de dados
# Para desenvolvimento local (SQLite)
DATABASE_URL=sqlite:///src/database/ecommerce.db

# Para produção (PostgreSQL)
# DATABASE_URL=postgresql://usuario:senha@host:5432/nome_do_banco

# Configurações de email (para futuras implementações)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=sua-loja@gmail.com
MAIL_PASSWORD=sua_senha_de_app

# Configurações de pagamento (para futuras implementações)
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=TEST-...

# Configurações de ambiente
FLASK_ENV=development
FLASK_DEBUG=True

# URL base da API (ajustar conforme ambiente)
API_BASE_URL=http://localhost:5000/api

# Configurações de upload de imagens (para futuras implementações)
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Configurações de cache (para futuras implementações)
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
